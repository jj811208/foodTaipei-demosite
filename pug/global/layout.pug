
include ../mixin/mixin

block var
// pagetitle classlist
doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
    meta(name="viewport" content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, width=device-width")
    meta(name="apple-mobile-web-app-capable" content="yes")
    title FOOD TAIPEI
    link(href="css/index.css" rel="stylesheet")
    script(src="js/vendors/jquery/jquery.js" type="text/javascript")
    script(src="js/vendors/fontawesome/all.js" type="text/javascript" defer)
    script(src="js/vendors/toastr/toastr.js" type="text/javascript")
