mixin textareaInput(info = {label:'',value:'',placeholder:'',name:'',desc:'',bottomDesc:'',isReadonly:false})
  label.customTextareaInput_container
    .customTextInput_title=info.label
    .customTextInput_inputBlock(id=info.name)
      .customTextInput_input(data-id=info.name)
        textarea(class='textarea',name=info.name,placeholder=info.placeholder,readonly=info.isReadonly)
          !=info.value
        if block
          block
      if(info.desc!='')
        .customTextInput_desc(data-id=info.name)!=info.desc
    if(info.rightDesc!='' && info.rightDesc)
      .customTextInput_desc.customTextInput_desc-right!=info.rightDesc

mixin input(type,name,value,label,desc='')
  label.customInputContainer
    input.customInput(type=type,name=name,value=value)
    if type=='radio'
      span.customRadio
    else if type=='checkbox'
      span.customCheckbox
    span!=label
      span.customInputContainer_desc=desc

