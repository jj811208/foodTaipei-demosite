mixin radio(label,value,name,desc='')
  label.customInputContainer
    input.customInput(type='radio',name=name,value=value)
    span.customRadio
    span.customLabel!=label
      span.customInputContainer_desc=desc

mixin checkbox(label,value,name,desc='')
  label.customInputContainer
    input.customInput(type='checkbox',name=name,value=value)
    span.customCheckbox
    span.customLabel!=label
      span.customInputContainer_desc=desc

mixin textInput(info = {label:'',value:'',placeholder:'',name:'',desc:'',rightDesc:'',isReadonly:false})
  label.customTextInput_container(class=(info.isReadonly?'customTextInput_container-readonly':''))
    .customTextInput_title=info.label
    .customTextInput_inputBlock(id=info.name)
      if info.isReadonly
        .customTextInput_inputBlock-readonly=info.value
      else  
        .customTextInput_input(data-id=info.name)
          input(type='text',class='text',value=info.value,name=info.name,placeholder=info.placeholder,readonly=info.isReadonly)
          if block
            block
        //- if(info.desc!='' && info.desc)
        .customTextInput_desc(data-id=info.name)!=info.desc
      if(info.rightDesc!='' && info.rightDesc)
        .customTextInput_desc.customTextInput_desc-right!=info.rightDesc

